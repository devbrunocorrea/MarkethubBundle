{
    "name": "gpupo/markethub-bundle",
    "description": "Integração de SDKs para Marketplaces com Symfony2",
    "keywords": ["Marketplace", "B2W", "Cnova", "Zattini", "SF2", "SDK"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Gpupo\\Bundle\\MarkethubBundle\\": ""
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "symfony/http-kernel": "~2.7|~3.0",
        "symfony/dependency-injection": "~2.7|~3.0",
        "symfony/config": "~2.7|~3.0",
        "gpupo/submarino-sdk": "*",
        "gpupo/cnova-sdk": "*",
        "gpupo/zattini-sdk": "*"

    },
    "require-dev": {
        "symfony/monolog-bundle": "~2.7@dev",
        "symfony/phpunit-bridge": "^3.1"
    },
    "scripts": {
        "pre-install-cmd": [
            "mkdir -p Resources/logs",
            "touch Resources/logs/tests.log"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
